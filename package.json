{
  "name": "sdvv-backend-nest",
  "version": "0.0.1",
  "description": "San Diego Voters Voice backend and data store",
  "author": "Open San Diego",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run build:web && npm run build:worker",
    "build:web": "nest build sdvv-backend-nest",
    "build:worker": "nest build standalone-worker",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:web:dev": "nest start sdvv-backend-nest --watch",
    "start:worker:dev": "nest start standalone-worker --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod:web": "node dist/apps/sdvv-backend-nest/main",
    "start:prod:worker": "node dist/apps/standalone-worker/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/sdvv-backend-nest/test/jest-e2e.json",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@nestjs/axios": "0.0.3",
    "@nestjs/bull": "^0.4.2",
    "@nestjs/common": "^8.2.3",
    "@nestjs/config": "^1.1.5",
    "@nestjs/core": "^8.2.3",
    "@nestjs/mapped-types": "^1.0.0",
    "@nestjs/platform-express": "^8.2.3",
    "@nestjs/schedule": "^1.0.2",
    "@nestjs/typeorm": "^8.0.2",
    "axios": "^0.21.3",
    "bull": "^3.29.1",
    "cache-manager": "^3.4.4",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.2",
    "currency.js": "^2.0.4",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "ts-node": "^10.0.0",
    "typeorm": "^0.2.41",
    "typescript": "^4.3.5",
    "xlsx": "^0.17.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.5",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.2.3",
    "@types/cache-manager": "^3.4.2",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "tsconfig-paths": "^3.10.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/sdvv-database(|/.*)$": "<rootDir>/libs/sdvv-database/src/$1",
      "^@app/efile-api-data(|/.*)$": "<rootDir>/libs/efile-api-data/src/$1"
    }
  }
}

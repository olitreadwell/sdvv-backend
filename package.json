{
  "name": "sdvv-backend-nest",
  "version": "0.0.1",
  "description": "San Diego Voters Voice backend and data store",
  "engines": {
    "node": "18.x"
  },
  "author": "Open San Diego",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm run build:web && npm run build:worker",
    "build:web": "nest build sdvv-backend-nest",
    "build:worker": "nest build standalone-worker",
    "db:migration:run": "npm run typeorm migration:run -- -d ./orm-data-source.ts",
    "db:initialize:data": "node -r ts-node/register apps/standalone-worker/src/console.ts initialize-data",
    "db:migration:revert": "npm run typeorm migration:revert -- -d ./orm-data-source.ts",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:web:dev": "nest start sdvv-backend-nest --watch",
    "start:worker:dev": "nest start standalone-worker --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod:web": "node dist/apps/sdvv-backend-nest/main",
    "start:prod:worker": "node dist/apps/standalone-worker/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/sdvv-backend-nest/test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-esm"
  },
  "dependencies": {
    "@nestjs/apollo": "^10.2.0",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/bull": "^0.6.3",
    "@nestjs/common": "^9.3.12",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.3.12",
    "@nestjs/graphql": "^10.2.0",
    "@nestjs/mapped-types": "^1.2.0",
    "@nestjs/platform-express": "^9.3.12",
    "@nestjs/schedule": "^2.2.0",
    "@nestjs/serve-static": "^3.0.1",
    "@nestjs/typeorm": "^9.0.1",
    "@types/node": "^18.15.5",
    "apollo-server-express": "^3.12.0",
    "axios": "^1.3.4",
    "bull": "^4.10.4",
    "cache-manager": "^5.2.0",
    "cache-manager-ioredis-yet": "^1.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "currency.js": "^2.0.4",
    "dotenv": "^16.0.3",
    "expose-gc": "^1.0.0",
    "graphql": "^16.6.0",
    "nest-winston": "^1.9.1",
    "nestjs-console": "^8.0.0",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.4.1",
    "rxjs": "^7.8.0",
    "ts-morph": "^17.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typeorm": "^0.3.12",
    "typescript": "^4.9.4",
    "winston": "^3.8.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.3.0",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.3.12",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@typescript-eslint/parser": "^5.56.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.6",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/sdvv-database(|/.*)$": "<rootDir>/libs/sdvv-database/src/$1",
      "^@app/efile-api-data(|/.*)$": "<rootDir>/libs/efile-api-data/src/$1"
    }
  }
}
